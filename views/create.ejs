<!DOCTYPE html>
<html lang="en">
    <%- include('../layouts/header') -%>
<body>
    <%- include('../layouts/navbar') -%>

        <div class="container-main card p-5 mt-3 mb-5 ">
                <h1 class="display-4 mb-5">Create a Post</h1>

            <form class="mt-3"action="../posts/store" method="POST" >
                <!-- model input-->
                <div class="form-outline mb-4">
                    <input type="text" name="model" required>
                    <label class="form-label" for="title">Model name</label>
                </div> 
                
                <!-- rok produkcja input-->
                <div class="form-outline mb-4">
                    <input type="text" name="productionYear" required>
                    <label class="form-label" for="year">rok produkcji</label>
                </div>

                <!-- desc input-->
                <div class="form-outline mb-4">
                    <input type="text" name="description" required>
                    <label class="form-label" for="description">description</label>
                </div> 

                 


                <script>
                    $('#boay').summernote({
                         placeholder: "Your message goes here",
                         tabsize: 2,
                         height: 200
                        });
                </script>

                <!--Submit button-->
                <button type="submit" class="btn btn-primary btn-block" mb-4>Send</button>
                </form>
        </div>
        <%- include('../layouts/footer') -%>

</body>
<!--MDB-->
<%- include('../layouts/scripts') -%>
</html>